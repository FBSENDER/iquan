      - @cate1.each do |c|
        %a{href: "/ec/#{c.id}.html"} #{c.name}
        |
    - if @hot_keywords.size > 0
      %p.desc
        Hot Search:
        %br
        %a{href: "/e_popular/#{URI.encode(@k)}", title: "Best Value #{@k}"} #{@k}
