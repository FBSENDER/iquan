- title("【#{@shop.title}】#{@shop.title}优惠券/折扣/首页/评价怎么样_爱券网")
- head_desc("#{@desc} - 爱券网")
- keywords("#{@shop.title},#{@shop.title}首页,#{@shop.title}优惠券,#{@shop.title}折扣,#{@shop.title}怎么样,#{@shop.title}评价,#{@shop.title}淘宝,#{@shop.title}天猫")
- path(@path)
- mobile_url(@path)

- if @suggest_keywords.size > 0
  = render partial: "diyquan/suggest_keywords", locals: {keywords: @suggest_keywords}

.wrapper1200.zk-detail
  .wrapper-l.zk-main
    = render partial: "dianpu/shop_bread", locals: {title: @shop.title}
    .shop
      .shop-cover
        %img.shop-cover-img{src:"#{@shop.pic_url}", alt: "#{@shop.title}"}
        %p.shop-cover-p 
          %strong #{@shop.title}
      .shop-info
        %h1.shop-info-h1 #{@shop.title}
        %p.shop-desc 
          - if @scoupons.size > 0
            %strong #{@shop.title}
            正在发放的优惠券共有#{@scoupons.size}张：
            %br
            - @scoupons.each do |sc|
              #{@shop.title}满#{sc.m_price}元减#{sc.coupon_price}元优惠券 - 有效期至#{Time.at(sc.end_time).strftime("%Y-%m-%d %H:%M")} - 
              %a{href: "/dianpu_buy/#{sc.seller_id}/?activity_id=#{sc.activity_id}", title: "#{@shop.title}#{sc.coupon_price}元优惠券", style: "color:blue", target: "_blank"} 点我领取
              %br
          #{@desc}
        .shop-buy
          %a.shop-buy-a{href: "#{@shop.shop_url}",isconvert: 1, title: "#{@shop.title}", rel: "nofollow", target: "_blank"} 去看看
    .shop-right
      %img{src: "/image/lbanner1.png", style: "width: 200px;margin: 0 auto;"}
      %p 买买买只需要1秒，对比价格却要2小时，关注公众号注册合伙人，拿全网优惠券💰 领券下单，还有佣金拿😃


.wrapper{style:"margin: 20px auto;"}
  %a{href: "#", data:{type: 2, tmpl:"720x220", tmplid:"209",rd: "2",style:"2", border: "1"}, biz:{keyword: '女装'}}

.wrapper1200
  .rel-zk-area{style: "margin-bottom: 30px;"}
    %p.head
      %span 推荐店铺
    .rel-zk-list.clearfix
      - @shops.each do |shop|
        .shop-item
          %a{href: "/dianpu/#{URI.encode(shop.nick)}/", title: "#{shop.title}"}
            %img.shop-item-img{src: "#{shop.pic_url}", alt: "#{shop.title}"}
            %p.shop-item-p #{shop.title}
      - @jd_shops.each do |shop|
        .shop-item
          %a{href: "/dianpu/jd_#{shop.shop_id}/", title: "#{shop.shop_name}"}
            %img.shop-item-img{src: "/image/love.jpg"}
            %p.shop-item-p #{shop.shop_name}
  = render partial: "/layouts/link_for_top"

= render partial: "diyquan/footer"
