- title(@title)
- head_desc(@description)
- keywords(@keywords)
- path(@path)
- mobile_url(@path)
- h1(@h1)

= render partial: "diyquan/header_fenlei_zhekou"
= render partial: "diyquan/suggest_keywords", locals: {keywords: @suggest_keywords}
.wrapper.search-result{style: "margin-top:10px"}
  .sno
    %p #{@description} 更新于#{Time.now.strftime("%Y年%m月%d日")}
    %p #{@desc_ext.html_safe}
    %p
      相关推荐：
      - @keywords.split(',').each do |k|
        %strong #{k}
  = render partial: "diyquan/tb_quan_list", locals: {zhekous: @zhekous, coupons: []}
  .sno
    %p #{@description}

= render partial: "diyquan/outlink_footer", locals: {links: @links, outlinks: @outlinks}
