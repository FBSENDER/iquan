- title("#{@detail["shortTitle"]}_十块购")
- head_desc("#{@detail["shortTitle"]}：#{@detail["title"]}#{@detail["recommend"]} 到手价#{@detail["nowPrice"]}元 - 十块购")
- keywords("#{@detail["shortTitle"]},#{@detail["title"]}")
- path("/detail/x_#{@detail["itemId"]}")
- mobile_url("/detail/x_#{@detail["itemId"]}")
- h1("")
- coupon = @detail
- aaid = coupon['couponUrl'].match(/activityId=(\w*)/)
- aaid = aaid.nil? ? '' : aaid[1]
- buy_url = "http://api.uuhaodian.com/uu/pcbuy?id=#{coupon["itemId"]}&activity_id=#{aaid}&channel=3"
- c_url = "/buy_url/x_#{coupon["itemId"]}"

.wrapper1200
  .haohuo-area
    .img-left-area
      %img#cover_image{src: "#{@detail["coverImage"]}", alt: "#{@detail["title"]}"}
      .small-area
        %ul
          - @detail["auctionImages"][0,5].each do |pic|
            %li{style: "display:inline;"}
              %img.small_img{src: "#{pic}"}
    .info-middle-area
      %h1
        #{@detail["shortTitle"].split.join}
      %p.recommend #{@detail["recommend"]}
      .price-d
        %p
          优惠信息：可领#{@detail["couponMoney"].to_i}元优惠券
          %span{style: "float:right"} 包邮
        %p
          价格：#{@detail["price"]}元
          %span{style: "float:right"} 更新于#{Time.now.to_s[0,10]}

      %a#buy_click{href: "javascript:;", onclick: "go_buy_url();"}
        .buy-d
          %span.s1 到手价￥#{@detail["nowPrice"].to_f.round(2)}
          %span.s2 立即购买
      %a{href: "javascript:;", data:{id: "#{@detail["sellerId"]}"}, onclick: "go_shop_url($(this));"}
        .shop-d
          .d1
            %img{src: "https://www.uuhaodian.com/img/shop.svg"}
          .d2
            %h3 #{@detail["shopName"]}#{@detail["sellerName"]}
            %p 天猫淘宝好店推荐
          .d3 进店看看 >>
      .query-d
        商品分类：
        %a{href: "/zhekou/#{URI.encode_www_form_component(@detail["category"])}/"} #{@detail["category"]}
      .ma-d
        .d1
          %img{src: "https://www.uuhaodian.com/img/lbanner1.png"}
          关注公众号
        .d1
          #qrcode_in{style: "height: 80px;margin: 10px auto;"}
          手机淘宝扫一扫 直接购买
    .list-right-area
      %h3 新品推荐-十块购
      %ul
        - @cid3.each do |item|
          %a{href: "/detail/x_#{item["goodsId"]}", title: "#{item["dtitle"]}"}
            %li
              %img{src: "#{item["mainPic"]}", alt: "#{item["dtitle"]}"}
              %p
                #{item["dtitle"]}
                %br
                到手价￥#{item["actualPrice"]}
.wrapper1200.haohuo-detail-area
  .same-left-area
    %h3 相似商品推荐
  .detail-middle-area
    %h3 商品详情与用户评价
    .d1
      .title
        %h4 商品描述
      %p #{@detail["recommend"]}
      .title
        %h4 商品详情
      - @detail["detailImages"].each_with_index do |pic, index|
        %img{src: "#{pic}", alt: "#{@detail["title"]}商品图片-#{index+1}"}
      .title
        %h4 用户评价
      %p 没有更多了
    = render partial: "layouts/google_ad_pc_middle"
  .shop-right-area
    %h3 店铺推荐
    %ul
      - @jiukuaijiu.each do |item|
        %li
          %a{href: "javascript:;", data:{id: "#{item["sellerId"]}"}, onclick: "go_shop_url($(this));"}
            #{item["shopName"]}

:javascript
  $(".small_img").hover(function(){
    $("#cover_image").attr("src", $(this).attr("src"));
  })
  var go_shop_url = function(e){
    url = "https://api.uuhaodian.com/uu/shop_go?shop_id="+ e.data("id") +"&sgo=shikuai";
    window.open(url);
  }
  var go_buy_url = function(){
    window.open("#{buy_url}");
  }
  var canvas_callback = function(data){
    if(data.status == 1){
      var cv = $("#qrcode_in");
      cv.qrcode({
        render: "canvas",
        height: 80,
        width: 80,
        text: data.url
      });
    }
  }
  $.ajax({
    url: "#{c_url}",
    type: 'GET',
    dataType: 'jsonp',
    data:{
      'callback': 'canvas_callback'
    },
    success:function(data){
    }
  });
  $.ajax({
    url: "https://api.uuhaodian.com/uu/dg_goods_list",
    type: 'GET',
    dataType: 'jsonp',
    data: {
      'keyword': '#{@detail["shortTitle"][-8,8]}',
      'page': 1,
      'callback': 'callback'
    },
    success:function(data){
    },
    complete: function(){
    }
  });
  var callback = function(data){
    if(data.status == 1){
      var cl = data.results
      var htmlstr = '<ul>';
      for(var i=0,len=cl.length;i<len;i++){
        var z = cl[i];
        var coupon_money = z.coupon_amount ? parseInt(z.coupon_amount) : 0;
        var now_price = (parseFloat(z.zk_final_price) - coupon_money).toFixed(2);
        var o_price = coupon_money > 0 ? parseFloat(z.zk_final_price).toFixed(2) : parseFloat(z.reserve_price).toFixed(2);
        var zhe = (now_price * 10.0 / o_price).toFixed(1);
        var platform = '',platformPic = '';
        htmlstr += '<a href="/detail/x_' + z.item_id +  '" title="'+ z.title +'">';
        htmlstr += '<li>';
        htmlstr += '<img src="' + z.pict_url + '" alt="' + z.title + '"/>';
        htmlstr += '<p>';
        htmlstr += z.short_title;
        htmlstr += '<br/>'
        htmlstr += '<span>到手价￥' + now_price + '</span>';
        htmlstr += '</p></li></a>'
      }
      htmlstr += '</ul>';
      htmlstr = $(htmlstr);
      $('.same-left-area').append(htmlstr);
    }
  }
