.row 
  .col-xs-12
    %h3.page-header{style:"padding-left:20px;"} 已扫码好友
  - @us.each do |detail|
    .col-xs-12{style: "margin-bottom: 10px;"}
      .col-xs-5
        %img{src: "#{detail.headimgurl}", width: '50px', height: '50px', style: "float:right"}
      .col-xs-7
        %p{style: "line-height:50px;font-size:18px;margin:0;padding:0;"} #{detail.name}
  .col-xs-12
    %h3.page-header{style: "padding-left:20px;"} 邮寄地址
    %form{style: "padding:0 20px;", action: "/qx/address/#{params[:id]}/", method: "POST"}
      .form-group
        %label 收件人
        %input.form-control{type: "text", name: "user_name", placeholder: "姓名", value: "#{@detail.yj_name}"}
      .form-group
        %label 联系电话
        %input.form-control{type: "text", name: "phone", placeholder: "手机号", value: "#{@detail.yj_phone}"}
      .form-group
        %label 邮寄地址
        %input.form-control{type: "text", name: "address", placeholder: "邮寄地址", value: "#{@detail.yj_address}"}
      %button.btn.btn-default{type: "submit",style: "width:100%;"}提交
